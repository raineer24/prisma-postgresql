model User {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  hashedPassword String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt()
  image          String?
  role           String   @default("basic")

  @@map("users")
}
